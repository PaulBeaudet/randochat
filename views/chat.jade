extends ./header.jade

block content
    // chat/topic rows
    .row
        .col-xs-12
            table.table.table-hover.table-striped
                tr
                    th
                        span#dialog0
                        span#person0.text-danger.pull-right
                tr
                    th
                        span#dialog1
                        span#person1.text-danger.pull-right
                tr
                    th
                        span#dialog2
                        span#person2.text-danger.pull-right
                tr
                    th
                        span#dialog3
                        span#person3.text-danger.pull-right

    // WPM Ticker
    .row
        .col-xs-12.text-center
            h1#wpm.text-center.text-success
    // chatbar on bottom of page
    include textInput.jade
    // Javescript dependencies
    include dependencies.jade
    script(type='text/javascript', src='client.js')
